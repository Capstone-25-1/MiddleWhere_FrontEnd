{
  "compilerOptions": {
    "baseUrl": ".", // 프로젝트 루트 기준
    "paths": {
      "@/*": ["src/*"] // @ → src 폴더로 매핑
    },
    "jsx": "react-jsx", // JSX 지원
    "module": "esnext", // ES module 사용
    "moduleResolution": "node", // node 방식 import
    "target": "esnext",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist"]
}
